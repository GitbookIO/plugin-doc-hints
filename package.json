{
    "name": "gitbook-plugin-hints",
    "description": "Defines four types of styled hint blocks: info, danger, success, warning.",
    "main": "index.js",
    "version": "2.0.0",
    "engines": {
        "gitbook": ">2.x.x"
    },
    "license": "Apache 2.0",
    "homepage": "https://github.com/GitbookIO/plugin-hints",
    "repository": {
        "type": "git",
        "url": "https://github.com/GitbookIO/plugin-hints.git"
    },
    "gitbook": {
        "properties": {
            "danger": {
                "type": "string",
                "title": "CSS class for the 'danger' icons"
            },
            "info": {
                "type": "string",
                "title": "CSS class for the 'info' icons"
            },
            "success": {
                "type": "string",
                "title": "CSS class for the 'success' icons"
            },
            "warning": {
                "type": "string",
                "title": "CSS class for the 'warning' icons"
            }
        }
    }
}
